\title{Passage par valeur et par référence}
\author{thibautbenjamin}
\taxon{Exemple}
\date{2025-11-04T13:35:19Z}
\import{basemacros}

\p{\cppdisplay{
\startverb
void echanger (int x, int y){
  int z = x;
  x = y;
  y = z;
}

int main (){
  int a = 0;
  int b = 1;
  echanger (a,b);
  // a ce point du programme,
  // avec un appel par valeur,
  // a = 0, b = 1
  // avec un appel par référence,
  // a = 1, b = 0
  return 0;
}
\stopverb
}}