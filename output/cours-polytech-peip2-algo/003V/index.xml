                        <html:cpp>
<![CDATA[void echangerRef (int &x, int &y){
  int z = x;
  x = y;
  y = z;
}

int main (){
  int a = 0;
  int b = 1;
  echangerRef (a,b);
  // a ce point du programme,
  // a = 1, b = 0
  return 0;
}]]>
