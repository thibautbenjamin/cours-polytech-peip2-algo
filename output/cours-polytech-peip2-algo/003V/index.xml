                  <fr:mainmatter>
                    <html:p>
                      <html:pre>
                        <html:cpp>
<![CDATA[void echangerTableaux (int[] x, int[] y){
  int z = x;
  x = y;
  y = z;
}

int main (){
  int a = {0};
  int b = {1};
  echangerTableaux (a,b);
  // même si a et b sont des tableaux (pointeurs),
  // a ce point du programme,
  // a = {0}, b = {1}
  return 0;
}]]>
</html:cpp>
                      </html:pre>
                    </html:p>
                    <html:p>
